@model QueryBuilder1._0.kysely

@{
    ViewBag.Title = "Luo uusi kysely";
}

@{
    if (TempData["Huomautus"] != null)
    {
        <script type="text/javascript">
        alert(@Html.Raw(Json.Encode(TempData["Huomautus"])));
        </script>
    }
}

<h2>Luo kysely</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Luo kysely</h4>
    <hr />



    <form action="/kyselies/Create">

        <h4> Valitse käyttäjä:</h4>
        @Html.DropDownList("id", (SelectList)ViewBag.Kayttaja, "--Valitse käyttäjä--", new { @class = "form-control" })

        <h4>Minkälaisen kyselyn haluat muodostaa?</h4>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <h4></h4>

        @Html.DropDownList("ValintaOperaattori_ID", (IEnumerable<SelectListItem>)ViewBag.Valintaoperaattori, null, new { @class = "form-control" })

        <h4></h4>

        @Html.DropDownList("Maaritys_ID", (IEnumerable<SelectListItem>)ViewBag.Maaritys, null, new { @class = "form-control" })

        <h4></h4>

        <p>Talusta:</p>
        <h4></h4>
        <input type="text" name="Taulu" id="Taulu" />
        <h4></h4>

        @Html.DropDownList("Ehto_ID", (SelectList)ViewBag.Ehto, "--Valitse ehto--", new { @class = "form-control" })
        <h4></h4>

        <p>Ehto:</p>
        <h4></h4>

        <input type="text" name="ehtoMaaritys" id="ehtoMaaritys" />

        <h4></h4>

        @Html.DropDownList("Operaattori_ID", (SelectList)ViewBag.Operaattori, "--Valitse operaattori--", new { @class = "form-control" })

        <h4></h4>

        <input type="text" name="Ehto" id="Ehto" />

    </form>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
